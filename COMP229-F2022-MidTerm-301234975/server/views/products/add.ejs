<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="idTextField">Product ID</label>
                    <input type="text" class="form-control"
                    id="idTextField"
                    placeholder="Enter the Product ID"
                    name="id" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Product Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Product Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="descTextField">Description</label>
                    <input type="text" class="form-control"
                    id="descTextField"
                    placeholder="Enter the Description"
                    name="description" required>
                </div>

                <div class="form-group">
                    <label for="priceTextArea">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextArea"
                    placeholder="Enter the Price"
                    name="price" required>
                </div>


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/products" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div
<% include ../partials/footer.ejs %>